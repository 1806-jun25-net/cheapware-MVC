@model IEnumerable<CheapWare.WebApp.Models.Inventorys>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h2>Inventory</h2>
    <div>
        <a asp-action="SortByCheapest">Sort By Cheapest</a>
    </div>
    <div>
        <a asp-action="SortByExpensive">Sort By Expensive</a>
    </div>
    <br />
    <div>
        <form asp-action="GetInventoryByCategory">
            <select name="cars">
                <option>Browse by Category</option>
                <option value="computercases">Computer Cases</option>
                <option value="cpus">CPUs</option>
                <option value="graphicscards">Graphics Cards</option>
                <option value="harddrives">Hard Drives</option>
                <option value="motherboards">MotherBoards</option>
                <option value="powersupplys">Power Supplys</option>
                <option value="rams">RAMs</option>
            </select>
            <br><br>
            <input type="submit">
        </form>
    </div>



    <div class="panel panel-primary">
        @foreach (var item in Model)
        {
            <div class="container-fluid panel-body">
                <div class="info top">
                    <h4 class="h4" style="display:inline-block;">@Html.DisplayNameFor(model => item.Price):</h4>
                    &nbsp;<h4 class="h4" style="display:inline-block;">$@Html.DisplayFor(model => item.Price)</h4>
                    <br />
                    <h4 class="h4" style="display:inline-block;">@Html.DisplayNameFor(model => item.Category):</h4>
                    <h4 class="h4" style="display:inline-block;">@Html.DisplayFor(model => item.Category)</h4>
                </div>
                <a asp-action="Details" asp-controller="@(@item.Category + "s")" asp-route-name="@item.Name"><img class="img-responsive center-block" style="width:25%;height:25%;" src="@("https://cheapwareimages.blob.core.windows.net/images/" + item.Image)" /></a>
                <a asp-action="Details" asp-controller="@(@item.Category + "s")" asp-route-name="@item.Name"><h3 class="h3" style="text-align:center;">@Html.DisplayFor(model => item.Name)</h3></a>

                <hr />
            </div>
        }
    </div>
</div>



