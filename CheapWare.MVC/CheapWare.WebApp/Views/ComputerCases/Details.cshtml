@model CheapWare.WebApp.Models.ComputerCases

@{
    ViewData["Title"] = "Details";

}


<div class="container" style="padding:15px !important;">
    <div class="panel panel-primary" style="margin:5px;">
        <div class="container-fluid" style="padding: 15px !important;">
            <img class="img-responsive left" style="width:25%;" src="@("https://cheapwareimages.blob.core.windows.net/images/" + Model.Image)" />
            <h3 class="h3">@Html.DisplayFor(model => model.Name)</h3>
        </div>

        <div class="panel-heading">
            <h4 class="h4">Product Specs</h4>
            <hr />
            <br />
            &nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayNameFor(model => model.Size)
            :&nbsp;
            @Html.DisplayFor(model => model.Size)
            <br />
            &nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayNameFor(model => model.Price)
            :&nbsp;
            @Html.DisplayFor(model => model.Price)


        </div>
        <div class="panel-body">

            <a asp-action="AddCart" asp-controller="Carts" asp-route-name="@Model.Name" style="display:inline-block !important" class="btn btn-info">Add to Cart</a>
            
            <a asp-action="Index" asp-controller="Inventorys" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>

